.grid
    margin-top 20px
    text-align center
    display flex
    flex-wrap wrap

    &__img {
      height: 175px;
      flex-basis: 175px;
      min-width: 100px;
      max-width: 200px;
      background-repeat: no-repeat;
      background-size: cover;
      background-position: center center;
      cursor: pointer;
      margin: 5px;
    }
